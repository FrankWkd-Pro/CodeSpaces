{
    /*
    关于settings.json的一些说明：
    Vim：已经禁用了复制粘贴全选查找的快捷键，防止和系统快捷键冲突（其实是我不会用Vim的复制粘贴快捷键）
        “jk”是切换到NormalMode
        “kj”是后移一个字符（跳出括号时经常用）
    */
    /*Extensions: CPH*/
    //接入以导入样例数据
    "cph.general.defaultLanguage": "cpp",
    "cph.language.cpp.SubmissionCompiler": "GNU G++14 6.4.0", // 使用 C++14 标准
    "cph.language.cpp.Args": "-std=c++14", // -O2
    "cph.general.saveLocation": "/media/frank/FrankW/_default/Mine/Working/code-spaces/OI/CPH.Extension.Config",
    /*Extensions: Power Mode*/
    "powermode.enabled": true,
    /*Extensions: Background*/
    "background.enabled": true,
    "background.fullscreen": {
        "useFront": true,
        "style": {
            "background-position": "100% 100%",
            "background-size": "auto",
            "opacity": 0.2
        },
        "images": [
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/2.png",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/2.jpg",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/3.png",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/4.png",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/6.png",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/7.webp",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/8.jpg",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/10.png",
            "file:///media/frank/FrankW/_default/Mine/Working/code-spaces/.vscode/VSCodeWallpapers/11.png"
        ],
        "interval": 300,
        "random": true
    },
    /*clang-format*/
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.vcFormat.space.insertAfterSemicolon": true,
    "C_Cpp.vcFormat.space.withinCastParentheses": true,
    "C_Cpp.vcFormat.space.withinExpressionParentheses": true,
    "C_Cpp.doxygen.sectionTags": [
        "attention",
        "tparam",
        "param",
        "result",
        "returns",
        "retval",
        "exception",
        "deprecated",
        "warning",
        "note",
        "bug"
    ],
    "C_Cpp.markdownInComments": "enabled",
    "C_Cpp.default.mergeConfigurations": true,
    "C_Cpp.default.systemIncludePath": [
        "/Library/Developer/CommandLineTools/usr/bin/../include/c++/v1 ",
        "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.0/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/usr/include",
        "/Library/Developer/CommandLineTools/usr/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/System/Library/Frameworks"
    ], //合并配置
    "C_Cpp.default.compilerPath": "/usr/bin/clang", //编译器路径
    "C_Cpp.clang_format_style": "{BasedOnStyle: Google,IndentWidth: 4,TabWidth: 4,NamespaceIndentation: All,FixNamespaceComments: false,ColumnLimit: 0,AllowShortIfStatementsOnASingleLine: Never}", //Google风格的代码格式化
    //不需要自动格式化的，删去上面的和第23~25有关格式化的三行
    /*editor - 美观&编辑类*/
    "editor.cursorBlinking": "smooth", //使光标闪烁有呼吸感
    "editor.smoothScrolling": true, //使编辑窗口滚动变平滑
    "editor.cursorStyle": "underline", //光标样式：下划线
    "editor.wordWrap": "on", //在文件内容溢出vscode显示区域时自动折行
    "editor.fontFamily": "jetbrains mono medium",
    "editor.fontLigatures": true, //启动字体连字
    "editor.copyWithSyntaxHighlighting": false, //复制代码时复制纯文本而不是连语法高亮都复制了
    "editor.detectIndentation": false, //不基于文件内容选择缩进用制表符还是空格
    "editor.formatOnPaste": true, //粘贴时格式化
    "editor.formatOnSave": true, //保存格式化
    "editor.formatOnType": true, //按下分号格式化，以上三条有自己码风的选手可以删去
    "editor.stickyTabStops": true, //移动光标时，将四个空格看作一个Tab
    "editor.cursorSmoothCaretAnimation": "on", //输入时使光标移动变得平滑
    "editor.mouseWheelZoom": true, //鼠标滚轮+Commmand(Ctrl)缩放字体大小
    "editor.guides.bracketPairs": true, //括号匹配高亮
    "editor.bracketPairColorization.enabled": true, //括号匹配高亮(彩虹括号)
    "editor.suggest.snippetsPreventQuickSuggestions": false, //智能提示可以按下Enter接受
    "editor.accessibilitySupport": "off",
    "editor.suggestSelection": "recentlyUsed",
    "window.dialogStyle": "custom",
    "debug.onTaskErrors": "abort",
    "debug.showBreakpointsInOverviewRuler": true,
    /*files - 文件类*/
    "files.autoGuessEncoding": true, //自动猜测文件编码
    "files.autoSave": "onFocusChange", //失焦时保存
    "files.exclude": { //隐藏一些碍眼的文件夹
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.watcherExclude": { //不索引一些不必要索引的大文件夹以减少内存和CPU消耗
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true
    },
    /*search*/
    "search.followSymlinks": false, //据说可以减少vscode的CPU和内存占用
    /*workbench*/
    "workbench.settings.applyToAllProfiles": [
        "workbench.colorCustomizations"
    ],
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor"
